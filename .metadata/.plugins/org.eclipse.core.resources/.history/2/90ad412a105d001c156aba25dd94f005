package pay.my.buddy;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.ApplicationContext;

import pay.my.buddy.dal.ClientRepository;
import pay.my.buddy.entities.Client;

@SpringBootApplication
public class PayMyBuddyApplication {

	public static void main(String[] args) {
		ApplicationContext ctx = SpringApplication.run(PayMyBuddyApplication.class, args);
		ClientRepository clientRepository = ctx.getBean(ClientRepository.class);
		clientRepository.save(new Client("Hassan", "hassan@gmail.com"));
	}

}
