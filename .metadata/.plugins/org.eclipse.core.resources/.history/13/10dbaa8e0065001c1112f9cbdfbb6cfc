package pay.my.buddy.service;

import java.util.Date;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.domain.Page;
import org.springframework.data.domain.PageRequest;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import pay.my.buddy.dal.CompteRepository;
import pay.my.buddy.dal.OperationRepository;
import pay.my.buddy.entities.Compte;
import pay.my.buddy.entities.Operation;
import pay.my.buddy.entities.Retrait;
import pay.my.buddy.entities.Versement;
import pay.my.buddy.entities.Virement;
import pay.my.buddy.entities.VirementReceive;
import pay.my.buddy.entities.VirementSent;

@Service
@Transactional
public class PayMyBuddyMetrierImpl implements IPayMyBuddyMetier {

	@Autowired
	private CompteRepository compteRepository;
	@Autowired
	private OperationRepository operationRepository;

	
	@Override
	public Compte consulterCompte(String codeCompte) throws Exception {
		Compte cp = compteRepository.findById(codeCompte).orElse(null);
		if (cp == null) {
			throw new Exception("Compte introuvable");
		}
		return cp;
	}

	@Override
	public void verser(String codeCompte, double montant, String description) throws Exception {
		Compte cp = consulterCompte(codeCompte);
		Versement v = new Versement(new Date(), montant, description, cp);
		operationRepository.save(v);
		double facturation = montant * Fare.FACTURATION;
		v.setFacturation(facturation);
		cp.setAmount(cp.getAmount() + montant);
		cp.setFacturation(cp.getFacturation() + facturation);
		compteRepository.save(cp);

	}

	@Override
	public void retirer(String codeCompte, double montant, String description) throws Exception {
		Compte cp = consulterCompte(codeCompte);
		double facturation = montant * Fare.FACTURATION;
		if (cp.getAmount() < montant + facturation) {
			throw new Exception("Solde insuffisant!");
		}
		Retrait r = new Retrait(new Date(), montant, description, cp);
		r.setFacturation(facturation);
		operationRepository.save(r);
		cp.setAmount(cp.getAmount() - montant);
		cp.setFacturation(cp.getFacturation() + facturation);
		compteRepository.save(cp);

	}

	@Override
	public void virement(String sender, String recipient, double montant, String description) throws Exception {
		if (sender.equals(recipient)) {
			throw new Exception("Opération impossible : virement sur le même compte");
		}
		Compte compteSender = consulterCompte(sender);
		double facturation = montant * Fare.FACTURATION;

		if (compteSender.getAmount() < montant + facturation) {
			throw new RuntimeException("Solde insuffisant!");
		}
//		Retrait r = new Retrait(new Date(), montant, description, cp);
//		operationRepository.save(r);
		compteSender.setAmount(compteSender.getAmount() - montant);
		compteRepository.save(compteSender);

		Compte compteRecipient = consulterCompte(recipient);
//		Versement v = new Versement(new Date(), montant, description, cp);
//		operationRepository.save(v);
		compteRecipient.setAmount(compteRecipient.getAmount() + montant);
		compteRepository.save(compteRecipient);

		VirementSent virementSent = new VirementSent(new Date(), montant, description, compteSender, recipient);
		VirementReceive virementReceive = new VirementReceive(new Date(), montant, description, compteRecipient, sender);
		virementSent.setFacturation(facturation);
		virementSent.setNameRecipient(compteRecipient.getClient().getName());
		virementReceive.setFacturation(facturation);
		virementReceive.setNameSender(compteSender.getClient().getName());
		operationRepository.save(virementSent);
		operationRepository.save(virementReceive);


	}

	@Override
	public Page<Operation> listOperation(String codeCompte, int page, int size) {
		return operationRepository.listOperation(codeCompte, PageRequest.of(page, size));

	}

}
